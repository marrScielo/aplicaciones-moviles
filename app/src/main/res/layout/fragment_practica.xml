<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".infomodulos.practica"
    android:padding="20dp">

    <!-- Contenedor vertical para el Título y la Descripción -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top|center_horizontal"
        android:paddingTop="30dp">

        <!-- Título de la Prueba (Muestra el nombre del módulo) -->
        <TextView
            android:id="@+id/tvModuloNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prueba de Módulo"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"/>

        <!-- Descripción/Instrucciones de la Prueba -->
        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pon a prueba tus conocimientos con este quiz. Tienes 10 segundos por pregunta. ¡Asegúrate de haber revisado la sección de información primero!"
            android:textSize="16sp"
            android:textColor="#808080"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btnIniciarPrueba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INICIAR PRUEBA"
            android:textSize="20sp"
            android:paddingVertical="15dp"
            android:layout_marginHorizontal="20dp"
            android:backgroundTint="#3F51B5"
            android:textColor="@android:color/white"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="80dp"
            android:layout_marginTop="22dp"/>
    </LinearLayout>



</FrameLayout>