<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/inicio">


    <!-- Espacio flexible arriba -->



    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5" />

    <!-- Contenido centrado -->

    <!-- Espacio flexible abajo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fuente"
            android:text="BIENVENIDO"
            android:textAlignment="center"
            android:textColor="#29354B"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/tvSubtitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/fuente_ultra"
            android:gravity="center"
            android:lineSpacingExtra="8dp"
            android:text="Conviértete en el héroe de tus\nfinanzas jugando cada día."
            android:textAlignment="center"
            android:textColor="#29354B"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_inicioSesion"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#29354B"
            android:fontFamily="@font/fuente"
            android:text="INICIAR SESIÓN"
            android:textColor="#FFFFFF" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_crearCuenta"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/fuente"
            android:text="CREAR CUENTA"
            android:textColor="#2A364D"
            app:backgroundTint="@android:color/transparent"
            app:cornerRadius="40dp"
            app:rippleColor="@android:color/transparent"
            app:strokeColor="#2A364D"
            app:strokeWidth="3dp" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
